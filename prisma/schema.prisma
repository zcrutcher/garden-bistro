// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model MenuItem {
  id Int @id @default(autoincrement())
  title String @unique
  description String
  image String
}

model Contact {
  id Int @id @default(autoincrement())
  email String
  phone String
  message String
}

model Review{
  id Int @id @default(autoincrement())
  firstName String
  stars Int
  message String
  image String
}

model Reservation {
  id Int @id @default(autoincrement())
  party Int
  date String
  time String
  firstName String
  lastName String
  phone String
  email String
  specialRequests String?
}